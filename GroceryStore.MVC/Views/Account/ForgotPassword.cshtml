@model UserEmailModel

<h1 class="heading">Сброс вашего пароля</h1>
<div class="lone-field-page">
        <form asp-action="@nameof(AccountController.ForgotPassword)">
            <div>
                <label id="email">Введите вашу электронную почту: </label>
            </div>
            <div>
                <input asp-for="@Model.Email" id="email" type="email" placeholder="Электронная почта" class="box" />
            </div>
            <button class="btn" type="submit">Отправить письмо</button>
        </form>
</div>