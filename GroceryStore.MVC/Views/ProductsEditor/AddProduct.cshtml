@model ProductDto
@{
}
<partial name="_ValidationScriptsPartial" />
<h1 class="heading">Добавление нового продукта</h1>
<div class="fs-4 text-center">
    <a class="details-btn" asp-action="@(nameof(ProductsEditorController.Index))">Вернуться к списку</a>
</div>
<div class="contact">
    <div class="row mt-2">
        <form asp-action="@nameof(ProductsEditorController.AddProduct)" asp-controller="@(ControllerExt.NameOf<ProductsEditorController>())" enctype="multipart/form-data">
            <div class="form add-product-form">
                <div asp-validation-summary="All" class="text-danger fs-4"></div>
                <div>
                    <label asp-for="Name"></label>
                    <div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <input class="box" asp-for="Name" />
                </div>
                <div>
                    <label asp-for="Description"></label>
                    <div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <textarea class="box" asp-for="Description"></textarea>
                </div>
                <div>
                    <label asp-for="Price"></label>
                    <div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <input class="box" type="number" asp-for="Price" />
                </div>
                <div>
                    <label asp-for="Quantity"></label>
                    <div>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <input class="box" asp-for="Quantity" />
                </div>
                <div>
                    <label asp-for="CategoryId"></label>
                    <div>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <select class="box"
                            asp-items="@(new SelectList(ViewBag.Categories, nameof(CategoryDto.Id), nameof(CategoryDto.Name)))" asp-for="CategoryId" class="form-control">
                        <option value="" selected disabled>Выберите категорию</option>
                    </select>
                </div>
            </div>
            <div class="no-image">
                <div>
                    <label class="mb-1" asp-for="ImageMain"></label>
                    <div>
                        <span asp-validation-for="ImageMain" class="text-danger"></span>
                    </div>
                    <input asp-for="ImageMain" type="file" />
                </div>
                <div class="mt-3">
                    <label class="mb-1" asp-for="Images"></label>
                    <div>
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>
                    <input asp-for="Images" type="file" multiple />
                </div>
            </div>
            <div class="text-center">
                <button class="btn mb-4 text-center" type="submit">Добавить</button>
            </div>
        </form>
    </div>
</div>