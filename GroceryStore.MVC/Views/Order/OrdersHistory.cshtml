@model List<OrderDto>
@{
}

<h1 class="heading">История ваших заказов</h1>
@if (Model?.Count > 0)
{
    <div class="contact cart-box-container">
        <div class="row">
            <div class="info">
                @foreach (var order in Model)
                {
                    <div class="box">
                        <p class="mt-4">Сумма заказа: @order.TotalPrice</p>
                        <p>Количество позиций: @order.Items.Count</p>
                        <p>Заказано: @order.CreatedAt</p>
                        <div class="mb-5">
                            <a class="order-details-link" asp-controller="@(ControllerExt.NameOf<OrdersController>())"
                               asp-action="@nameof(OrdersController.OrderDetails)" asp-route-orderId="@order.Id">Подробности</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center margin-big">
        <h1>Вы не сделали ни одного заказа =(</h1>
    </div>
}