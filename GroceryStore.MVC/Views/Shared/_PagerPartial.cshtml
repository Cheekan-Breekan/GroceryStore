@model Pager
@{
}

<div>
    @if (Model.TotalItemsCount > 0)
    {
        <ul class="pagination pagination-fs">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-sortOrder="@Model.CurrentSortOrder"
                       asp-route-currentFilter="@Model.CurrentSearchFilter" asp-route-page="1" asp-route-categoryFilter="@Model.CurrentSelectedCategory">Первая</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-sortOrder="@Model.CurrentSortOrder"
                       asp-route-currentFilter="@Model.CurrentSearchFilter" asp-route-page="@(Model.CurrentPage - 1)" asp-route-categoryFilter="@Model.CurrentSelectedCategory">Предыдущая</a>
                </li>
            }
            @for (int pageNumber = Model.StartPage; pageNumber <= Model.EndPage; pageNumber++)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-sortOrder="@Model.CurrentSortOrder"
                       asp-route-currentFilter="@Model.CurrentSearchFilter" asp-route-page="@pageNumber" asp-route-categoryFilter="@Model.CurrentSelectedCategory">@pageNumber</a>
                </li>
            }
            @if (Model.CurrentPage < Model.EndPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-sortOrder="@Model.CurrentSortOrder"
                       asp-route-currentFilter="@Model.CurrentSearchFilter" asp-route-page="@(Model.CurrentPage + 1)" asp-route-categoryFilter="@Model.CurrentSelectedCategory">Следующая</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-sortOrder="@Model.CurrentSortOrder"
                       asp-route-currentFilter="@Model.CurrentSearchFilter" asp-route-page="@Model.TotalPagesCount" asp-route-categoryFilter="@Model.CurrentSelectedCategory">Последняя</a>
                </li>
            }
            <li class="page-item">
                <form method="get" asp-controller="@Model.ControllerName" asp-action="@Model.ActionName" asp-route-sortOrder="@Model.CurrentSortOrder"
                      asp-route-currentFilter="@Model.CurrentSearchFilter" asp-route-categoryFilter="@Model.CurrentSelectedCategory">
                    <input name="sortOrder" value="@Model.CurrentSortOrder" hidden />
                    <input name="currentFilter" value="@Model.CurrentSearchFilter" hidden />
                    <input name="page" value="" />
                    <button hidden type="submit">Искать</button>
                </form>
            </li>
        </ul>
    }
</div>